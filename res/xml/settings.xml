<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="General options"
                        android:summary="Tweak the nuts and bolts">
        <ListPreference android:key="dateFormat" android:title="Date format"
                        android:summary="Select a date format" android:entries="@array/dateFormatSettings"
                        android:entryValues="@array/dateFormatSettingsValues"
                        android:dialogTitle="Select date format"/>
        <ListPreference android:key="shakeSensitivity" android:title="Shake sensitivity"
                        android:summary="Sensitivity for shake-to-clear" android:entries="@array/shakeSensitivitySettings"
                        android:entryValues="@array/shakeSensitivity" android:dialogTitle="Select sensitivity"/>
    </PreferenceCategory>
    <PreferenceCategory android:title="Item options" android:summary="Various settings for items">
        <Preference android:key="resetCounters" android:title="Reset counters"
                    android:summary="Reset item usage counters"/>
        <Preference android:key="exportItems" android:title="Export"
                    android:summary="Export items to SD-card"/>
        <Preference android:key="importItems" android:title="Import"
                    android:summary="Import items from SD-card"/>
    </PreferenceCategory>
    <PreferenceCategory android:title="Statistics" android:summary="App statistics">
        <Preference android:key="resetStats" android:title="Reset statistics" />
        <Preference android:key="timesStarted" android:title="Times started"
                    android:summary="0"/>
        <Preference android:key="shoppingListsCreated" android:title="Shopping lists created"
                    android:summary="0"/>
        <Preference android:key="itemsChecked" android:title="Items checked off"
                    android:summary="0"/>
    </PreferenceCategory>
</PreferenceScreen>